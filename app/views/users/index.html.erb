
<%= form_for @user do |u| %>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Name</span>
  <%=  u.text_field :name%>
</div>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Post</span>
  <%=  u.text_area :post%>
</div>

<%= u.submit "Post Me!" %>
<% end %>
<div class= "container">

<% time_users=@users.order('created_at desc')%>
<% time_users.each do |w| %>
<h3><%= w.name %></h3>
<h4><%= w.created_at %></h4>
<p><%= w.post %></p>
<% end %>
</div>
