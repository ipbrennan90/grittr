
<%= form_for @user do |u| %>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">@</span>
  <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
</div>
<%= u.label :name %>
<%= u.text_field :name %>
</br>
<%= u.label :post %>
<%= u.text_area :post %>
</br>
<%= u.submit "Post Me!" %>
<% end %>

<% @users.each do |w| %>
<h3><%= w.name %></h3>
<p><%= w.post %></p>
<% end %>
